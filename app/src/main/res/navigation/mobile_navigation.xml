<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/navigation_home">

    <fragment
            android:id="@+id/navigation_home"
            android:name="com.app.moviedb_android.ui.home.HomeFragment"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home"/>

    <fragment
            android:id="@+id/navigation_dashboard"
            android:name="com.app.moviedb_android.ui.sales.SalesFragment"
            android:label="@string/title_dashboard"
            tools:layout="@layout/fragment_dashboard"/>

    <fragment
            android:id="@+id/navigation_sales"
            android:name="com.app.moviedb_android.ui.sales.SalesFragment"
            android:label="@string/title_sales"
            tools:layout="@layout/fragment_dashboard"/>

    <fragment
            android:id="@+id/navigation_search"
            android:name="com.app.moviedb_android.ui.search.SearchFragment"
            android:label="@string/title_search"
            tools:layout="@layout/fragment_search"/>

    <fragment
            android:id="@+id/navigation_cart"
            android:name="com.app.moviedb_android.ui.cart.CartFragment"
            android:label="@string/title_cart"
            tools:layout="@layout/fragment_cart"/>
</navigation>